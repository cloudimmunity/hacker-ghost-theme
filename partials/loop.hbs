{{#foreach posts}}

<article class="{{post_class}}">
	<div class="inner">
		<header class="post-header">
			<span class="post-meta">{{author}} {{tags prefix=" | " separator=", "}} </span>
			<div class="clear"></div>
			<h2 class="post-title"><a class="js-ajax-link js-show-post" href="{{url}}">{{{title}}}</a></h2>
			{{#if feature_image}}
				<figure class="post-image">
					<img src="{{feature_image}}" alt="" />
				</figure>
			{{/if}}
		</header>

		<section class="post-excerpt">
            <p>{{content words=200}}<a class="js-ajax-link js-show-post" href="{{url}}">&hellip;</a></p>
		</section>
	</div>
</article>

{{/foreach}}

{{!-- Email subscribe form at the bottom of the page --}}
{{#if @labs.members}}
	{{> subscribe-form}}
{{/if}}

